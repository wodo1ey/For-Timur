#include <iostream>
#include <iomanip>
#include <time.h>
#include <algorithm>

using namespace std;

void main()
{
	setlocale(LC_ALL, "Russian");
	srand(time(0));
	int const n = 20;
	int s[n];
	for (int i = 0; i < n; i++) s[i] = 0 + rand() % 99; //генерация случайных элементов от 0 до 99
	for (int i = 0; i < n; i++) cout << s[i] << ' ';
	int max = s[0], max_num = 0;
	int min = s[0], min_num = 0;
	for (int i = 1; i < n; i++) {
		if (s[i] > max) {
			max = s[i];
			max_num = i;
		}
		if (s[i] < min) {
			min = s[i];
			min_num = i;
		}
	}
	cout << endl << "Максимальный элемент масссива = " << max << ". " << "А его номер - " << max_num + 1 << endl;
	cout << "Минимальный элемент масссива = " << min << ". " << "А его номер - " << min_num + 1 << endl;
	int sum = 0;
	for (int i = 0; i < n; i++) sum += s[i];
	cout << "Сумма элементов массива = " << sum << endl;
	int average = sum / n;
	cout << "Среднее значение элементов массива = " << average << endl;
	int sdvig[n];
	sdvig[n - 1] = s[0];
	for (int i = 0; i < (n - 1); i++) {
		sdvig[i] = s[i + 1];
	}
	int revers[n];
	int y = 0;
	for (int i = (n - 1); i >= 0; i--) {
		revers[y] = s[i];
		y++;
	}
	sort(s, s + n);
	cout << "Отсортированный массив:" << endl;
	for (int i = 0; i < n; i++) cout << s[i] << ' ';
	int x = n;
	int* s_sup;
	s_sup = new int[x];
	int j = 0;
	for (int i = 0; i < n; i++) {
		if (s[i] > average) {
			s_sup[j] = s[i];
			j++;
		}
	}
	x = j;
	cout << endl << "Новый массив, содержащий все элементы прошлого массива, которые больше среднего значения:" << endl;
	for (int i = 0; i < x; i++) cout << s_sup[i] << ' ';
	cout << endl << "Реверс элементов исходного массива: " << endl;
	for (int i = 0; i < n; i++) cout << revers[i] << ' ';
	cout << endl << "Сдвиг элементов исходного массива на 1 влево: " << endl;
	for (int i = 0; i < n; i++) cout << sdvig[i] << ' ';
}
